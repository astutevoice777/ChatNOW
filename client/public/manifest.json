{
  "manifest_version": 3,
  "name": "ChatNOW Extension",
  "version": "1.0.0",
  "permissions": [
    "tabCapture",
    "desktopCapture",
    "offscreen"
  ],
  "description": "ChatNOW Application",
  "icons": {
    "16": "favicon.ico",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open ChatNOW"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src http://localhost:3030 ws://localhost:3030 http://localhost:3003"
  }
}